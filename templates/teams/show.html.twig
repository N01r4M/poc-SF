{% extends 'base.html.twig' %}

{% block title %}{{ team.name }} | {% endblock %}

{% block body %}
    <h1>{{ team.name }}</h1>

    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_teams_index') }}">Retour à la liste</a>
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_teams_edit', {'id': team.id}) }}" class="btn me-2" title="Modifier l'équipe">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-pencil-square" viewbox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
            </a>

            {{ include('teams/_delete_form.html.twig') }}
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Membres</th>
                <td>
                    <ul>
                        {% for member in members %}
                            <li>
                                {{ member.lastName|upper }} {{ member.firstName }}
                                {% if member.isTeamManager %}
                                : manager
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            {% if team.parentTeam is not null %}
                <tr>
                    <th>Equipe parente</th>
                    <td>{{ team.parentTeam.name }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
{% endblock %}
