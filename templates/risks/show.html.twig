{% extends 'base.html.twig' %}

{% block title %}Risks{% endblock %}

{% block body %}
    <h1>Risks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ risk.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ risk.name }}</td>
            </tr>
            <tr>
                <th>IdentifiedAt</th>
                <td>{{ risk.identifiedAt ? risk.identifiedAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ResolvedAt</th>
                <td>{{ risk.resolvedAt ? risk.resolvedAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Probability</th>
                <td>{{ risk.probability }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_risks_index') }}">back to list</a>

    <a href="{{ path('app_risks_edit', {'id': risk.id}) }}">edit</a>

    {{ include('risks/_delete_form.html.twig') }}
{% endblock %}
