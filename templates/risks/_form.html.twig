{{ form_start(form) }}
    <div>
        {{ form_errors(form) }}
    </div>


    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
        <div class="col">
            {{ form_row(form.projects) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.identifiedAt) }}
        </div>
        <div class="col">
            {{ form_row(form.resolvedAt) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.severity) }}
        </div>
        <div class="col">
            {{ form_row(form.probability) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <button class="btn">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
