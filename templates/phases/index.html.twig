{% extends 'base.html.twig' %}

{% block title %}Liste des phases | {% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Liste des phases</h1>
        <a href="{{ path('app_phases_new') }}" class="btn">Nouvelle phase</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Valeur</th>
                <th>Nom</th>
                <th>Identifiant</th>
                <th>Couleur associée</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for phase in phases %}
            <tr>
                <td>{{ phase.value }}</td>
                <td>{{ phase.name }}</td>
                <td>{{ phase.slug }}</td>
                <td>
                    <div style='background-color: {{ phase.color }}; width: 2rem; height: 2rem '></div>
                </td>
                <td>
                    <a href="{{ path('app_phases_show', {'id': phase.id}) }}" class="btn" title="Plus d'informations sur la phase">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewbox="0 0 16 16">
                            <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                            <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                        </svg>
                    </a>
                    <a href="{{ path('app_phases_edit', {'id': phase.id}) }}" class="btn" title="Modifier la phase">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-pencil-square" viewbox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune phase trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
