{{ form_start(form) }}
    <div>
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
            {{ form_row(form.bearing) }}
        </div>
        <div class="col">
            {{ form_row(form.createdAt) }}
            {{ form_row(form.projects) }}
        </div>
    </div>

    {{ form_row(form.description) }}

    {{ form_rest(form) }}

    <button class="btn">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
