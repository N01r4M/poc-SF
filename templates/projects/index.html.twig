{% extends 'base.html.twig' %}

{% block title %}Projects index{% endblock %}

{% block body %}
    <h1>Projects index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Code</th>
                <th>StartedAt</th>
                <th>EndedAt</th>
                <th>IsArchived</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.code }}</td>
                <td>{{ project.startedAt ? project.startedAt|date('Y-m-d') : '' }}</td>
                <td>{{ project.endedAt ? project.endedAt|date('Y-m-d') : '' }}</td>
                <td>{{ project.isArchived ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_projects_show', {'id': project.id}) }}">show</a>
                    <a href="{{ path('app_projects_edit', {'id': project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projects_new') }}">Create new</a>
{% endblock %}
