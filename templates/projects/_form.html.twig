{{ form_start(form) }}
    <div>
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
        </div>
        <div class="col">
            {{ form_row(form.startedAt) }}
            {{ form_row(form.endedAt) }}
            {% if (app.request.pathInfo != path('app_projects_new')) %}
                {{ form_row(form.isArchived) }}
            {% else %}
                <div hidden>
                    {{ form_row(form.isArchived) }}
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.initialValue) }}
        </div>

        {% if (app.request.pathInfo != path('app_projects_new')) %}
            <div class="col">
                {{ form_row(form.consumedValue) }}
            </div>
        {% else %}
            <div hidden>
                {{ form_row(form.consumedValue) }}
            </div>
        {% endif %}
        
        <div class="col">
            {{ form_row(form.stillToDo) }}
        </div>

        {% if (app.request.pathInfo != path('app_projects_new')) %}
            <div class="col">
                {{ form_row(form.landing) }}
            </div>
        {% else %}
            <div hidden>
                {{ form_row(form.landing) }}
            </div>
        {% endif %}
    </div>
        
    <div class="row">
        <div class="col">
            {{ form_row(form.teamProject) }}
        </div>
        <div class="col">
            {{ form_row(form.teamCustomers) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.status) }}
        </div>
        <div class="col">
            {{ form_row(form.portfolio) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <button class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewbox="0 0 16 16">
            <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
        </svg>
        {{ button_label|default('Enregistrer') }}
    </button>
{{ form_end(form) }}
