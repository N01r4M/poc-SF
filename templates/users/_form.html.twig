{{ form_start(form) }}
    <div>
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.lastName) }}
        </div>
        <div class="col">
            {{ form_row(form.firstName) }}
        </div>
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.email) }}
        </div>
        <div class="col">
            {{ form_row(form.roles) }}
        </div>
    </div>

    <div class="row d-flex align-items-center">
        <div class="col">
            {{ form_row(form.team) }}
        </div>
        <div class="col">
            {{ form_row(form.isTeamManager) }}
        </div>
    </div>


    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
